{
  "name": "vanilla-light",
  "version": "0.1.1",
  "bin": {
    "vanilla-light": "./bin/start.js"
  },
  "unpkg": "./public/client.js",
  "scripts": {
    "start": "bun run src/server.js",
    "hot": "bun --hot src/server.js",
    "compile": "bun build ./src/server.js --compile --outfile ./bin/server"
  },
  "type": "module",
  "imports": {
    "#app": "./",
    "#app/*": "./*",
    "#plugins/*": "./src/plugins/*",
    "#data/*" : "./data/*",
    "#public": "./public"
  }
}
